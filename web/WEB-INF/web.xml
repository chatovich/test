<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.movierate.movie.controller.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>com.movierate.movie.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>parsing</servlet-name>
        <servlet-class>com.movierate.movie.controller.Parcing</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>parsing</servlet-name>
        <url-pattern>/parsing</url-pattern>
    </servlet-mapping>



</web-app>